                <div class="col-sm-8">
                  <select class="form-select" aria-label="Class" id="classSelector" onchange="sendData()">
                    <% for(var i=0; i < class_data.length; i++){ %>
                      <option value="<%= class_data[i].name %>">
                        <%= class_data[i].name %>
                      </option>
                      <% } %>
                  </select>
                </div>
              </div>
            </div>
          </div>
        </div>


        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Students</h5>

            <!-- Table with hoverable rows -->
            <table class="table table-hover" id="myTable">
              <thead>
                <tr>
                  <th scope="col">S/N</th>
                  <th scope="col">Name</th>
                  <th scope="col">Gender</th>
                  <th scope="col">DOB</th>
                  <th scope="col">Class</th>
                </tr>
              </thead>
              <tbody>
                <%counter=1;%>
                  <% for(var j=0; j < sessions_data[0].terms[0].students.length; j++){ %>
                    <% if(sessions_data[0].terms[0].students[j].class===class_data[0].name) { %>
                      <tr>
                        <th scope="row">
                          <%=counter %>
                        </th>
                        <td>
                          <%= sessions_data[0].terms[0].students[j].name %>
                        </td>
                        <td>
                          <%= sessions_data[0].terms[0].students[j].gender %>
                        </td>
                        <td>
                          <%= sessions_data[0].terms[0].students[j].dob %>
                        </td>
                        <td>
                          <%= sessions_data[0].terms[0].students[j].class %>
                        </td>
                      </tr>
                      <%counter++;%>
                        <% } %>
                          <% } %>
              </tbody>
            </table>
            <!-- End Table with hoverable rows -->
          </div>
        </div>
        <div class="text-center">
