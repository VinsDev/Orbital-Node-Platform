  <script>
    function sendData() {

      fetch('/admin/<%= school_obj.name %>/getStudents', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          session: $("#sessionSelector").val(),
          class: $("#classSelector").val(),
          term: $("#termSelector").val(),
        })
      }).then(res => res.json()).then(data => {
        var payload = data.payload;
        var content = '';
        if (payload < 1) {
          $('#myTable tbody').html('Students not added yet');
          return;
        }

        payload.forEach((item, index) => {
          content += `
                  <tr>
                    <th scope="row">${index + 1}</th>
                    <td>
                      ${item.name}
                      </td>
                    <td>
                      ${item.gender}
                    </td>
                    <td>
                      ${item.dob}
                    </td>
                    <td>
                      ${item.class}
                    </td>
                  </tr>`
        });
        $('#myTable tbody').html(content);
      });
      return;
    }

    $(document).ready(function () {
      var container = $('.chk_subs');
      var checkboxes = '';
      $.ajax({
        url: '/admin/<%= school_obj.name %>/getClassSubjects/' + $('#clsvalue').val(),
        type: 'GET',
        success: function (data) {
          $.each(data.payload, function (index, value) {
            checkboxes += '<input type="checkbox" id="sub_' + index + '" name="sub_' + index + '"' + 'value = "' + value.name + '" checked >' + '<label for="sub_' + index + '">' + value.name + ' </label> <br>';
          });
          container.html(checkboxes);
        }
      })
    })

    function updateCheckableSubjects() {
      var container = $('.chk_subs');
      var checkboxes = '';
      $.ajax({
        url: '/admin/<%= school_obj.name %>/getClassSubjects/' + $('#clsvalue').val(),
        type: 'GET',
        success: function (data) {
          $.each(data.payload, function (index, value) {
            checkboxes += '<input type="checkbox" id="sub_' + index + '" name="sub_' + '"' + 'value = "' + value.name + '" checked >' + '<label for="sub_' + index + '">' + value.name + ' </label> <br>';
          });
          container.html(checkboxes);
        }
      })
    }
  </script>

