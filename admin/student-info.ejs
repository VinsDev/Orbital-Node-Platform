    <% if(sessions_data.length !=0 && class_data.length !=0 && class_data[0].subjects.length !=0 && start_date !="null"
      && stop_date !="null" ) { %>
      <section class="section">
        <div class="col-md-12 offset-md-0">
          <!-- REFERENCE SELECTOR -->
          <div class="card">
            <div class="internal">
              <div class="rrr">
                <div class="row md-3">
                  <label class="col-sm-5 col-form-label">Session</label>
                  <div class="col-sm-8">
                    <select class="form-select" aria-label="Session" id="sessionSelector" onchange="sendData()">
                      <% for(var i=0; i < sessions_data.length; i++){ %>
                        <option value="<%= sessions_data[i].name %>">
                          <%= sessions_data[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                </div>

                <div class="row md-1">
                  <label class="col-sm-5 col-form-label">Term</label>
                  <div class="col-sm-8">
                    <select class="form-select" aria-label="Term" id="termSelector" onchange="sendData()">
                      <option value="first" selected>First</option>
                      <option value="second">Second</option>
                      <option value="third">Third</option>
                    </select>
                  </div>
                </div>

                <div class="row md-1">
                  <label class="col-sm-5 col-form-label">Class</label>
                  <div class="col-sm-8">
                    <select class="form-select" aria-label="Class" id="classSelector" onchange="sendData()">
                      <% for(var i=0; i < class_data.length; i++){ %>
                        <option value="<%= class_data[i].name %>">
                          <%= class_data[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                </div>
              </div>
            </div>
          </div>


          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Students</h5>

              <!-- Table with hoverable rows -->
              <table class="table table-hover" id="myTable">
                <thead>
                  <tr>
                    <th scope="col">S/N</th>
                    <th scope="col">Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">DOB</th>
                    <th scope="col">Class</th>
                  </tr>
                </thead>
                <tbody>
                  <%counter=1;%>
                    <% for(var j=0; j < sessions_data[0].terms[0].students.length; j++){ %>
                      <% if(sessions_data[0].terms[0].students[j].class===class_data[0].name) { %>
                        <tr>
                          <th scope="row">
                            <%=counter %>
                          </th>
                          <td>
                            <%= sessions_data[0].terms[0].students[j].name %>
                          </td>
                          <td>
                            <%= sessions_data[0].terms[0].students[j].gender %>
                          </td>
                          <td>
                            <%= sessions_data[0].terms[0].students[j].dob %>
                          </td>
                          <td>
                            <%= sessions_data[0].terms[0].students[j].class %>
                          </td>
                        </tr>
                        <%counter++;%>
                          <% } %>
                            <% } %>
                </tbody>
              </table>
              <!-- End Table with hoverable rows -->
            </div>
          </div>
          <div class="text-center">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModalCenter"
              id="adstd">Add
              Student</button>
          </div>
        </div>
        </div>
      </section>
      <div class="modal fade" id="exampleModalCenter" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Add Student</h5>
              <button class="close" data-bs-dismiss="modal"
                style="border: none; background-color: transparent;">&times;</button>
            </div>
            <div class="modal-body">
              <form class="row g-3 needs-validation" method="post" action="/admin/<%= school_obj.name %>/students">
                <div class="col-12">
                  <label for="yourName" class="form-label">Student Name</label>
                  <input type="text" name="name" class="form-control" id="yourName" required>
                  <div class="invalid-feedback">Please, enter student name!</div>
                </div>
                <div class="row md-1">
                  <label class="col-sm-5 col-form-label">Gender</label>
                  <div class="col-sm-8">
                    <select class="form-select" aria-label="Term" name="gender">
                      <option value="male" selected>Male</option>
                      <option value="female">Female</option>
                    </select>
                  </div>
                </div>

                <div class="col-12">
                  <label for="yourEmail" class="form-label">Date of birth</label>
                  <input type="date" name="dob" class="form-control" id="dob" required>
                  <div class="invalid-feedback">Please enter date of birth!</div>
                </div>

                <div class="row md-3">
                  <label class="col-sm-5 col-form-label">Session</label>
                  <div class="col-sm-8">
                    <select class="form-select" aria-label="Session" name="session" id="session">
                      <% for(var i=0; i < sessions_data.length; i++){ %>
                        <option>
                          <%= sessions_data[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                </div>

                <div class="row md-1">
                  <label class="col-sm-5 col-form-label">Term</label>
                  <div class="col-sm-8">
                    <select class="form-select" aria-label="Term" name="term" id="term">
                      <option value="first" selected>First</option>
                      <option value="second">Second</option>
                      <option value="third">Third</option>
                    </select>
                  </div>
                </div>

                <div class="row md-1">
                  <label class="col-sm-5 col-form-label">Class</label>
                  <div class="col-sm-8">
                    <select class="form-select" aria-label="Class" name="class" id="clsvalue"
                      onchange="updateCheckableSubjects()">
                      <% for(var i=0; i < class_data.length; i++){ %>
                        <option>
                          <%= class_data[i].name %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                </div>

                <label class="col-sm-5 col-form-label">Subjects</label>
                <div class="col-sm-8">
                  <div class="chk_subs"></div>
                </div>


                <div class="col-12">
                  <button id="btnSubmit" type="submit" style="display: none;"></button>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary" id="create">Create</button>
            </div>

          </div>
        </div>
      </div>
      <!-- Click -->
      <script>
        $("#create").on("click", function (e) {
          $.ajax({
            url: '/admin/<%= school_obj.name %>/getTermStatus/',
            data: {
              session: $('#session').val(),
              term: $('#term').val()
            },
            type: 'POST',
            success: function (data) {
              if (data.status === "true") {
                $('#btnSubmit').click();
              }
              else {
                if (data.av_nodes === "yes") {
                  $('#nbutt').click();
                } else {
                  alert("You do not have available nodes to activate this term. Please purchase more nodes from the Dashboard or Orbital Node Official Website");
                }
              }
            }
          })
        });

        function activateTerm() {
          $.ajax({
            url: '/admin/<%= school_obj.name %>/activateTerm/',
            data: {
              session: $('#session').val(),
              term: $('#term').val()
            },
            type: 'POST',
            success: function (data) {
              $('#adstd').click()
            }
          })
        }
      </script>

      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#nodes" id="nbutt"
        style="display: none;">Nbutt</button>
      <div class="modal fade" id="nodes" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Add Student</h5>
              <button class="close" data-bs-dismiss="modal"
                style="border: none; background-color: transparent;">&times;</button>
            </div>
            <div class="modal-body">
              <p>Selected term is not activated. Do you want to use one of your available nodes to activate the term?
              </p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
              <button type="button" class="btn btn-primary" onclick="activateTerm()">Yes</button>
            </div>

          </div>
        </div>
      </div>



      <% } else { %>
        <div class="text-center">
          <p>Please ensure that you follow the setup instructions on the user manual in the order stated in other to
            view the students info.</p><br>
          <ul>
            <li>Create a session</li>
            <li>Set term starting and Ending dates in the E-register section under Students</li>
            <li>Create Classes</li>
            <li>Add all subjects to classes</li>
            <li>Add students to class</li>
          </ul>
          <i>Please do note that if you do not follow the above instructions in the order stated, you could possibly run
            into issues
            while
            working with our system.</i>
        </div>
        <% } %>
