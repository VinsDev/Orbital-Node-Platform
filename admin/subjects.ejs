              <div class="card" style="position: relative;">
                <div class="d-flex justify-content-between">
                  <h5 class="session" id="nb_<%=j%>">
                    <%= class_data[0].subjects[j].name %>
                  </h5>
                  <div style="position: absolute; top: 50%; right: 10px; transform: translate(0, -50%);">
                    <button class="btn btn-primary" id="b_<%=j%>" onclick="del(this.id)">Delete</button>
