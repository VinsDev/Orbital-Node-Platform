    <% if(class_data.length !=0) { %>
      <!-- REFERENCE SELECTOR -->
      <div class="card">
        <div class="internal">
          <div class="rrr">
            <div class="row md-3">
              <label class="col-sm-5 col-form-label">Class</label>
              <div class="col-sm-12">
                <select class="form-select" aria-label="Session" onchange="sendData(this)" id="selected-class">
