  <script>
    function sendData(e) {
      const field = document.getElementById('subject-field');

      fetch('/admin/<%= school_obj.name %>/getSubjects', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ payload: e.value })
      }).then(res => res.json()).then(data => {
        var payload = data.payload;
        field.innerHTML = '';
        if (payload < 1) {
          field.innerHTML = '<p> Subjects not added yet</p>';
          return;
        }
        payload.forEach((item, index) => {

          if (item.name === e.value) {
            item.subjects.forEach((item, i) => {
              field.innerHTML += `<div class="col-md-10 offset-md-1">
                <div class="card" style="position: relative;">
                <div class="d-flex justify-content-between">
                  <h5 class="session" id="nb_${i}">
                    ${item.name}
                  </h5>
                  <div style="position: absolute; top: 50%; right: 10px; transform: translate(0, -50%);">
                    <button class="btn btn-primary" id="b_${i}" onclick="del(this.id)">Delete</button>
                  </div>
                </div>
              </div>
        </div>`
            })
          }
        });
      });
      return;

      field.innerHTML = '';
    }
  </script>

  <script src="../../admin/assets/js/jquery-3.6.1.js"></script>
  <script>
    function del(id) {
      var subjectId = '#n' + id;

      $.ajax({
        url: window.location.href + '/delete',
        type: 'POST',
        data: {
          class: $('#selected-class').val().trim(),
          subject: $(subjectId).text().trim()
        },
        success: function (data) {
          location.reload();
        },
        error: function (error) {
          alert("Something happened !")
        }
      })
    }
  </script>

