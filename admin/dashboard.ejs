  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Dashboard</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-sm-10 offset-md-1">
          <div class="row">

            <!-- Students Card -->
            <div class="col-xxl-6 col-md-6">
              <div class="card info-card sales-card">
                <div class="card-body">
                  <h5 class="card-title">Students <span>| Total Number</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-people"></i>
                    </div>
                    <div class="ps-3">
                      <h6>
                        <%= students %>
                      </h6>

                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Students Card -->

            <!-- Today Card -->
            <div class="col-xxl-6 col-md-6">
              <div class="card info-card revenue-card">
                <div class="card-body">
                  <h5 class="card-title">Today <span></span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-calendar"></i>
                    </div>
                    <div class="ps-3">
                      <h6>
                        <%= today %>
                      </h6>

                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Today Card -->

            <!-- Subscription Card -->
            <div class="col-xxl-12 col-xl-12">

              <div class="card info-card customers-card">
                <div class="card-body">
                  <h5 class="card-title">Number of Nodes Remaining:</h5>
                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-brightness-high"></i>
                    </div>
                    <div class="ps-3">
                      <h6>
                        <%= nodes %>
                      </h6>
                    </div>
                  </div>
                  <div style="margin-top: 20px;">
                    <a id="regnow" target="_blank" href="/purchase-node"
                      style="color: rgb(4, 8, 255); font-size: 16px;font-weight: bold;">Purchase
                      a Node</a>
                  </div>
                </div>
              </div>
            </div><!-- End Subscription Card -->

            <div class="col-xxl-12 col-xl-12">

              <div class="card info-card customers-card">
                <div class="card-body">
                  <h5 class="card-title">Current Session</h5>
                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-collection"></i>
                    </div>
                    <div class="ps-3">
                      <h6>
                        <p id="sess">
                          <%= session %>
                        </p> Academic Session
                      </h6>

                    </div>
                  </div>

                </div>
              </div>

            </div>
          </div>
        </div>

        <% var c1="" %>
          <% var c2="" %>
            <% var c3="" %>
              <% if(current_term==="first" ) c1='checked' ; %>
                <% if(current_term==="second" ) c2='checked' ; %>
                  <% if(current_term==="third" ) c3='checked' ; %>
                    <fieldset class="row mb-3" id="fs">
                      <legend class="col-form-label col-sm-2 pt-0">Portal Access Term</legend>
                      <div class="col-sm-10">
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="term" id="first" value="first" <%=c1 %>>
                          <label class="form-check-label" for="first">
                            First Term
                          </label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="term" id="second" value="second" <%=c2 %>>
                          <label class="form-check-label" for="second">
                            Second Term
                          </label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="term" id="third" value="third" <%=c3 %>>
                          <label class="form-check-label" for="third">
                            Third Term
                          </label>
                        </div>
                      </div>
                    </fieldset>


                    <% var e1="" %>
                      <% var e2="" %>
                        <% var e3="" %>
                          <% if(results_status==='1' ) e1='checked' ; %>
                            <% if(results_status==='2' ) e2='checked' ; %>
                              <% if(results_status==='3' ) e3='checked' ; %>
                                <fieldset class="row mb-3">
                                  <legend class="col-form-label col-sm-2 pt-0">Current Term Result Status</legend>
                                  <div class="col-sm-10">
                                    <div class="form-check">
                                      <input class="form-check-input" type="radio" name="status" id="released-for-all"
                                        value="released-for-all" <%=e1 %>>
                                      <label class="form-check-label" for="gridRadios1">
                                        Released for all Students.
                                      </label>
                                    </div>
                                    <div class="form-check">
                                      <input class="form-check-input" type="radio" name="status" id="released-for-some"
                                        value="released-for-some" <%=e2 %>>
                                      <label class="form-check-label" for="gridRadios1">
                                        Released for only Students who paid their fees.
                                      </label>
                                    </div>
                                    <div class="form-check">
                                      <input class="form-check-input" type="radio" name="status" id="not-released"
                                        value="not-released" <%=e3 %>>
                                      <label class="form-check-label" for="gridRadios2">
                                        Not Released
                                      </label>
                                    </div>
                                  </div>
                                </fieldset>


    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer" class="footer">
    <div class="copyright">
      &copy; Powered by <strong><span>Orbital Node 2023</span></strong>
    </div>
  </footer><!-- End Footer -->

  <!-- Change Password Modal -->
  <div class="modal fade" id="changePasswordModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Change Password</h5>
          <button class="close" data-bs-dismiss="modal"
            style="border: none; background-color: transparent;">&times;</button>
        </div>
        <div class="modal-body">
          <form class="row g-3 needs-validation" method="post" action="/admin/<%= school_obj.name %>/changePassword"
            id="passwordForm">
            <div class="col-12">
              <label for="yourName" class="form-label">Old Password</label>
              <input type="text" name="oldPass" class="form-control" id="old-psw" required>
              <div class="invalid-feedback">Please, enter your old password</div>
            </div>
            <div class="col-12">
              <label for="yourName" class="form-label">New Password</label>
              <input type="text" name="newPass" class="form-control" id="new-psw" required>
              <div class="invalid-feedback">Please, the new password</div>
            </div>
            <button type="submit" id="btnSubmit" style="display: none;"></button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="create" onclick="$('#btnSubmit').click()">Change</button>
        </div>

      </div>
    </div>
  </div>

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
      class="bi bi-arrow-up-short"></i></a>




  <script>
    $(document).ready(function () {
      $("#released-for-all").click(function () {
        $.ajax({
          url: '/admin/<%= school_obj.name %>/updateResultStatus',
          type: 'POST',
          data: {
            results_status: '1'
          },
          success: function (data) {
            if (data.success) {
              alert("success");
            } else {
              alert("Network Error");
            }
          },
          error: function (error) {
            alert('There was a problem.');
          }
        });
      });
      $("#released-for-some").click(function () {
        $.ajax({
          url: '/admin/<%= school_obj.name %>/updateResultStatus',
          type: 'POST',
          data: {
            results_status: '2'
          },
          success: function (data) {
            if (data.success) {
              alert("success");
            } else {
              alert("Network Error");
            }
          },
          error: function (error) {
            alert('There was a problem.');
          }
        });
      });
      $("#not-released").click(function () {
        $.ajax({
          url: '/admin/<%= school_obj.name %>/updateResultStatus',
          type: 'POST',
          data: {
            results_status: '3'
          },
          success: function (data) {
            if (data.success) {
              alert("success");
            } else {
              alert("Network Error");
            }
          },
          error: function (error) {
            alert('There was a problem.');
          }
        })
      });
      $("#first").click(function () {
        $.ajax({
          url: '/admin/<%= school_obj.name %>/updateCurrentTerm',
          type: 'POST',
          data: {
            current_term: $(this).val(),
          },
          success: function (data) {
            if (data.success) {
              location.reload();
            } else {
              alert("Network Error");
            }
          },
          error: function (error) {
            alert('Oops! Change not updated. Please ensure that a session is already created.');
          }
        });
      });
      $("#second").click(function () {
        $.ajax({
          url: '/admin/<%= school_obj.name %>/updateCurrentTerm',
          type: 'POST',
          data: {
            current_term: $(this).val(),
          },
          success: function (data) {
            if (data.success) {
              location.reload();
            } else {
              alert("Network Error");
            }
          },
          error: function (error) {
            alert('Oops! Change not updated. Please ensure that a session is already created.');
          }
        })
      });
      $("#third").click(function () {
        $.ajax({
          url: '/admin/<%= school_obj.name %>/updateCurrentTerm',
          type: 'POST',
          data: {
            current_term: $(this).val(),
          },
          success: function (data) {
            if (data.success) {
              location.reload();
            } else {
              alert("Network Error");
            }
          },
          error: function (error) {
            alert('Oops! Change not updated. Please ensure that a session is already created.');
          }
        })
      });

      $("#passwordForm").submit(function (event) {
        event.preventDefault();
        var form = $(this);
        var action = form.attr('action');
        var formData = form.serialize();
        $.ajax({
          type: "POST",
          url: action,
          data: formData,
          success: function (data) {
            if (data.success) {
              $(".modal-body").html("<h5>Your password was changes successfully.");
              setTimeout(function () {
                window.location.href = "/admin";
              }, 2000);
            } else {
              alert("The Old Password you entered is invalid! Try again.");
              setTimeout(function () {
                location.reload();
              }, 2000);
            }
          },
          error: function (error) {
            alert('Oops! Somerhing happened. Pls try again later');
          }
        });
      });

    });
  </script>

