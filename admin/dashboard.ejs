  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Dashboard</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item active">Dashboard</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">
      <div class="row">

        <!-- Left side columns -->
        <div class="col-sm-10 offset-md-1">
          <div class="row">

            <!-- Students Card -->
            <div class="col-xxl-6 col-md-6">
              <div class="card info-card sales-card">
                <div class="card-body">
                  <h5 class="card-title">Students <span>| Total Number</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-people"></i>
                    </div>
                    <div class="ps-3">
                      <h6>
                        <%= students %>
                      </h6>

                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Students Card -->

            <!-- Teachers Card -->
            <div class="col-xxl-6 col-md-6">
              <div class="card info-card revenue-card">
                <div class="card-body">
                  <h5 class="card-title">Teachers <span>| Total Number</span></h5>

                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="ps-3">
                      <h6>
                        <%= teachers %>
                      </h6>

                    </div>
                  </div>
                </div>

              </div>
            </div><!-- End Teachers Card -->

            <!-- Subscription Card -->
            <div class="col-xxl-12 col-xl-12">

              <div class="card info-card customers-card">
                <div class="card-body">
                  <h5 class="card-title">Your Subscription <span>| Active</span></h5>
                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-brightness-high"></i>
                    </div>
                    <div class="ps-3">
                      <h6>
                        <%= subscription %> Days Left
                      </h6>
                    </div>
                  </div>

                </div>
              </div>
            </div><!-- End Subscription Card -->

            <div class="col-xxl-12 col-xl-12">

              <div class="card info-card customers-card">
                <div class="card-body">
                  <h5 class="card-title">Current Session</h5>
                  <div class="d-flex align-items-center">
                    <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                      <i class="bi bi-collection"></i>
                    </div>
                    <div class="ps-3">
                      <h6>
                        <p id="sess">
                          <%= session %>
                        </p> Academic Session
                      </h6>

                    </div>
                  </div>

                </div>
              </div>

            </div>
          </div>
        </div>

        <% var c1="" %>
          <% var c2="" %>
            <% var c3="" %>
              <% if(current_term==="first" ) c1='checked' ; %>
                <% if(current_term==="second" ) c2='checked' ; %>
                  <% if(current_term==="third" ) c3='checked' ; %>
                    <fieldset class="row mb-3" id="fs">
                      <legend class="col-form-label col-sm-2 pt-0">Current Term</legend>
                      <div class="col-sm-10">
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="term" id="first" value="first" <%=c1 %>>
                          <label class="form-check-label" for="first">
                            First Term
                          </label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="term" id="second" value="second" <%=c2 %>>
                          <label class="form-check-label" for="second">
                            Second Term
                          </label>
                        </div>
                        <div class="form-check">
                          <input class="form-check-input" type="radio" name="term" id="third" value="third" <%=c3 %>>
                          <label class="form-check-label" for="third">
                            Third Term
                          </label>
                        </div>
                      </div>
                    </fieldset>

                    <script>
                      $(document).ready(function () {
                        $("#first").click(function () {
                          $.ajax({
                            url: '/admin/<%= school_obj.name %>/updateCurrentTerm',
                            type: 'POST',
                            data: {
                              current_term: $(this).val(),
                            },
                            success: function (data) {
                              if (data.success) {
                                location.reload();
                              } else {
                                alert("Network Error");
                              }
                            },
                            error: function (error) {
                              alert('There was a problem.');
                            }
                          });
                        });
                        $("#second").click(function () {
                          $.ajax({
                            url: '/admin/<%= school_obj.name %>/updateCurrentTerm',
                            type: 'POST',
                            data: {
                              current_term: $(this).val(),
                            },
                            success: function (data) {
                              if (data.success) {
                                location.reload();
                              } else {
                                alert("Network Error");
                              }
                            },
                            error: function (error) {
                              alert('There was a problem.');
                            }
                          })
                        });
                        $("#third").click(function () {
                          $.ajax({
                            url: '/admin/<%= school_obj.name %>/updateCurrentTerm',
                            type: 'POST',
                            data: {
                              current_term: $(this).val(),
                            },
                            success: function (data) {
                              if (data.success) {
                                location.reload();
                              } else {
                                alert("Network Error");
                              }
                            },
                            error: function (error) {
                              alert('There was a problem.');
                            }
                          })
                        });
                      });
                    </script>

                    <% var e1="" %>
                      <% var e2="" %>
                        <% if(results_status==='true' ) e1='checked' ; %>
                          <% if(results_status==='false' ) e2='checked' ; %>
                            <fieldset class="row mb-3">
                              <legend class="col-form-label col-sm-2 pt-0">Current Term Result Status</legend>
                              <div class="col-sm-10">
                                <div class="form-check">
                                  <input class="form-check-input" type="radio" name="status" id="released"
                                    value="released" <%=e1 %>>
                                  <label class="form-check-label" for="gridRadios1">
                                    Released
                                  </label>
                                </div>
                                <div class="form-check">
                                  <input class="form-check-input" type="radio" name="status" id="not-released"
                                    value="not-released" <%=e2 %>>
                                  <label class="form-check-label" for="gridRadios2">
                                    Not Released
                                  </label>
                                </div>
                              </div>
                            </fieldset>
                            <script>
                              $(document).ready(function () {
                                $("#released").click(function () {
                                  $.ajax({
                                    url: '/admin/<%= school_obj.name %>/updateResultStatus',
                                    type: 'POST',
                                    data: {
                                      results_status: true
                                    },
                                    success: function (data) {
                                      if (data.success) { } else {
                                        alert("Network Error");
                                      }
                                    },
                                    error: function (error) {
                                      alert('There was a problem.');
                                    }
                                  });
                                });
                                $("#not-released").click(function () {
                                  $.ajax({
                                    url: '/admin/<%= school_obj.name %>/updateResultStatus',
                                    type: 'POST',
                                    data: {
                                      results_status: false
                                    },
                                    success: function (data) {
                                      if (data.success) { } else {
                                        alert("Network Error");
                                      }
                                    },
                                    error: function (error) {
                                      alert('There was a problem.');
                                    }
                                  })
                                });
                              })
                            </script>

    </section>

